import os

# Funcție pentru a scrie căile imaginilor în fișierul txt
def write_image_paths(image_dir, output_file):
    with open(output_file, 'w') as f:
        for root, _, files in os.walk(image_dir):
            for file in files:
                if file.endswith('.jpg') or file.endswith('.png'):
                    file_path = os.path.join(root, file)
                    f.write(file_path.replace('\\', '/') + '\n')

# Folderele cu imaginile
train_dir = r'B:\LICENTA\train\images'
val_dir = r'B:\LICENTA\val\images'
test_dir = r'B:\LICENTA\test\images'

# Fișierele txt de ieșire
train_txt = 'B:/LICENTA/train.txt'
val_txt = 'B:/LICENTA/val.txt'
test_txt = 'B:/LICENTA/test.txt'

# Generarea fișierelor txt
write_image_paths(train_dir, train_txt)
write_image_paths(val_dir, val_txt)
write_image_paths(test_dir, test_txt)
