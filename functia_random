import random

# Căile către fișierele text
train_file = r'B:\LICENTA\train.txt'
val_file = r'B:\LICENTA\val.txt'
test_file = r'B:\LICENTA\test.txt'

# Funcție pentru amestecarea și rescrierea liniilor dintr-un fișier
def shuffle_and_rewrite(file_path):
    # Citim liniile din fișier
    with open(file_path, 'r') as file:
        lines = file.readlines()
    
    # Amestecăm liniile
    random.shuffle(lines)
    
    # Scriem liniile amestecate înapoi în fișier
    with open(file_path, 'w') as file:
        file.writelines(lines)

# Amestecăm și rescriem fișierele
shuffle_and_rewrite(train_file)
shuffle_and_rewrite(val_file)
shuffle_and_rewrite(test_file)

print("Fișierele train.txt, val.txt și test.txt au fost amestecate aleatoriu.")
